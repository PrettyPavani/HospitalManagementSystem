{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="col-md-4" style="margin-top: 5%;right: 8%">
  <div class="card" style="font-family: 'IBM Plex Sans', sans-serif;">
    <div class="card-body">
      <center>
      <h3 style="margin-top: 10%">Patient Login</h3><br>
      <div class="row" style="margin-top: 10%">
      <form method="post" class="form-group">
      {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}
      {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
      {% endif %}   
      <div class="col-md-8 mb-4">
        <div class="form-outline"> 
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"  placeholder="Enter Your Email" class="form-control" autocomplete="email" required autofocus>
        </div>
      </div>
      <div class="col-md-8 mb-4">
        <div class="form-outline"> 
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Enter Your Password" required>
        </div>
      </div>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">    
      <div class="btn-group mr-2">
        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
      </div>
    <div>
    <p class="mb-0">Don't have an account? <a href="/register">Register</a></p>
  </div>
</form>
{% endblock %}
